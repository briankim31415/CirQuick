{
	"entryFile": "./src/index.ts",
	"noImplicitAdditionalProperties": "throw-on-extras",
	"spec": {
		"outputDirectory": "public",
		"specVersion": 3,
        "securityDefinitions": {
            "api_key": {
                "type": "http",
                "name": "access_token",
                "scheme": "bearer",
                "in":"header"
            }
        }
	},
	"routes": {
		"basePath": "/",
		"entryFile": "./src/index.ts",
		"routesDir": "./src/routes",
		"controllerPathGlobs": "./src/controllers/*.ts",
        "authenticationModule": "./src/index.ts"
	}
}
